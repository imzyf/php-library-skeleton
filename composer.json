{
    "name": "imzyf/php-library-skeleton",
    "description": "PHP8 Composer",
    "type": "library",
    "authors": [
        {
            "name": "zhaoyifan",
            "email": "168@yifans.com"
        }
    ],
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.2",
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "autoload": {
        "classmap": [
        ],
        "psr-4": {
            "Dev\\Lizhi\\": "./src"
        },
        "files": [

        ]
    },
    "autoload-dev": {
        "classmap": [
        ],
        "psr-4": {
            "Tests\\Lizhi\\": "./tests"
        },
        "files": [
        ]
    },
    "scripts": {
        "fmt": [
            "@php vendor/bin/php-cs-fixer fix"
        ],
        "check": [
            "@fmt",
            "@php ./vendor/bin/phpstan --memory-limit=4096M"
        ],
        "g": [
            "@php ./vendor/bin/phpstan --memory-limit=4096M --generate-baseline='.phpstan/phpstan-baseline.neon'"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://mirrors.tencent.com/composer/"
        },
        {
            "packagist.org": false
        }
    ]
}
