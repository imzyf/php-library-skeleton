{
    "name": "lizhi-dev/library-skeleton",
    "description": "PHP8 Composer Library Skeleton",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php8",
        "skeleton",
        "composer"
    ],
    "authors": [
        {
            "name": "zhaoyifan",
            "email": "168@yifans.com",
            "homepage": "https://zyf.im"
        }
    ],
    "homepage": "https://zyf.im",
    "require": {
        "php": "^8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "ramsey/devtools": "^1.7",
        "symfony/var-dumper": "^6.2"
    },
    "suggest": {},
    "repositories": [
        {
            "type": "composer",
            "url": "https://mirrors.tencent.com/composer/"
        },
        {
            "packagist.org": false
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Lizhi\\Dev\\": "./src"
        },
        "classmap": [],
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Lizhi\\Tests\\": "./tests"
        },
        "classmap": [],
        "files": []
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ramsey/composer-repl": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true,
            "captainhook/plugin-composer": true,
            "ramsey/devtools": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {},
    "scripts": {
        "check": [
            "@fmt",
            "@php ./vendor/bin/phpstan --memory-limit=4096M"
        ],
        "fmt": [
            "@php vendor/bin/php-cs-fixer fix"
        ],
        "g": [
            "@php ./vendor/bin/phpstan --memory-limit=4096M --generate-baseline='.phpstan/phpstan-baseline.neon'"
        ]
    },
    "scripts-descriptions": {}
}
